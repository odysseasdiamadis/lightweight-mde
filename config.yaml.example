# Training configuration
model:
  name: "METER"
  variant: "s"  # xxs, xs, s

training:
  batch_size: 32
  learning_rate: 0.001
  num_epochs: 60
  log_step_loss: True
  lambda: 1 # selecitivty factor
  n_of_bins: 10 # bins for selectivity
  layers: ["MV2Block", "MobileViTBlock"] # layer classes to assign selectivity to


data:
  root: "/mnt/data/nyu/nyu_data/data"
  split_files_folder: "./data_splits"
  train_val_split: [0.9, 0.1]
  num_workers: 8
  shuffle: true

device:
  cuda: true
  device_id: 0

logging:
  log_interval: 0 # steps -- 0 for no log
  save_interval: 5 # epochs
  checkpoint_dir: "./checkpoints"
  log_dir: "./logs"